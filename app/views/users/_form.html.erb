<% if flash[:my_error]%>
    <%flash[:my_error].each do |error|%>
    <%=error%>
    <%end%>
<%end%>

<%= form_for @user do |f| %>
<p>
<%= f.label :name %>
<%= f.text_field :name %>
</p>
<p>
<%= f.label :password %>
<%= f.password_field :password %>
</p>
<p>
<%= f.label :bio %>
<%= f.text_field :bio %>
</p>
<%= f.label :birthday %>
<%= f.date_select(:birthday, order: [:month, :day, :year], start_year: Date.today.year - 80, end_year: Date.today.year - 1) %>
<p>
<%= f.submit %>
</p>
<% end %>


