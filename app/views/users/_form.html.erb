<% if flash[:my_error]%>
    <%flash[:my_error].each do |error|%>
    <%=error%>
    <%end%>
<%end%>

<%= form_for @user do |f| %>
<p class="sign-up-form">

    <%= f.label :username %>
    <%= f.text_field :name %>


    <%= f.label :password %>
    <%= f.password_field :password %>


    <%= f.label :bio %>
    <%= f.text_field :bio %>

    <%= f.label :birthday %>
    <%= f.date_select(:birthday, order: [:month, :day, :year], start_year: Date.today.year - 80, end_year: Date.today.year - 1) %>

    <%= f.submit %>
    
</p>
<% end %>


