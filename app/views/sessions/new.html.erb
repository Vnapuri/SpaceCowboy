<h1>Login To Your Account</h1>
<p>Find me in app/views/sessions/new.html.erb</p>

<%= form_for :session, url: login_path do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name  %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control'  %>

  <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>