<% if flash[:my_error]%>
    <%flash[:my_error].each do |error|%>
    <%=error%>
    <%end%>
<%end%>

<%= form_for @review do |f| %>

<%= f.collection_select :anime_id, Anime.all, :id, :title %>

<p>
<%= f.label :comment %>
<%= f.text_field :comment %>
</p>

<p>
<%= f.label :rating_out_of_100%>
<%= f.text_field(:rating, in: 1..100)%>
</p>

<p>
<%= f.submit %>
</p>
<%end %>
